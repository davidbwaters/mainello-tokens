{
  "source": ["tokens/*.json"],
  "platforms": {
    "scss": {
      "transformGroup": "scss",
      "buildPath": "build/scss/",
      "files": [{
        "destination": "_variables.scss",
        "format": "scss/variables"
      }]
    },
    "css": {
      "transformGroup": "css",
      "buildPath": "build/css/",
      "files": [{
        "destination": "_variables.css",
        "format": "css/variables",
        "filter": {
          "type": "color"
        }
      }]
    },
    "json-flat": {
      "transformGroup": "js",
      "buildPath": "build/json/",
      "files": [
        {
          "destination": "styles.json",
          "format": "json/flat"
        }
      ]
    }
  }
}
